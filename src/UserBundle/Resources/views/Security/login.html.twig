{% extends 'AppBundle::base.html.twig' %}

{% block title %}Smite.link : Login {% endblock %}

{% trans_default_domain 'UserBundle' %}

{% block sidebar %}
	{% include "UserBundle:Layout:sidebar.html.twig" %}
	<script>domReady($('#sidebar-account-login').addClass('active'))</script>
{% endblock %}

{% block body %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<h1 class="page-header">Login</h1>

<form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">
	<h2 class="form-signin-heading">Sign in</h2>
	<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
		
	<label for="username" class="sr-only">{{ 'security.login.username'|trans }}</label>
	<input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control"/>

	<label for="password" class="sr-only">{{ 'security.login.password'|trans }}</label>
	<input type="password" id="password" name="_password" required="required"  class="form-control"/>

	<div class="checkbox">
		<label for="remember_me">
			<input type="checkbox" id="remember_me" name="_remember_me" value="on" />
			{{ 'security.login.remember_me'|trans }}
		</label>
	</div>

	<input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"/>
	<a href="{{ path('fos_user_resetting_request') }}" class="row">{{ 'resetting.forgotten_password_link'|trans }}</a>
</form>
{% endblock %}
