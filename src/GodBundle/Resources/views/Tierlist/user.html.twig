{# GodBundle/Resources/views/tierlist.html.twig #}
{% extends 'AppBundle::base.html.twig' %}

{% block title %}Smite.link : Saved Tier List{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{% javascripts '@GodBundle/Resources/public/js/tierlist.js*' %}
		<script src="{{ asset_url }}"></script>
	{% endjavascripts %} 
{% endblock %}

{% block sidebar %}
	{% include "GodBundle:Layout:sidebar_tierlist.html.twig" %}
{% endblock %}


{% block body %}
	<h1 class="page-header">Tier List - <a href="https://smite.link/t/{{ uuid }}">{{ uuid }}</a></h1>

	{% include "GodBundle:Tierlist:saved_content.html.twig" %}
	{% for god in savedTier %}
		<script>addGodToSavedTierList({{ god.id }}, '{{ god.name }}', '{{ god.god_icon_url }}', {{ god.tier_level }})</script>
	{% endfor %}
	
{% endblock %}
